# Environment Configuration Examples

## Development Environment (.env.development)
NODE_ENV=development
PORT=2000
FRONTEND_URL=http://localhost:3000
JWT_SECRET=your_dev_jwt_secret
MONGODB_URI=mongodb+srv://user:pass@cluster.mongodb.net/tinderClone_dev
LOCAL_MYSQL_HOST=localhost
LOCAL_MYSQL_USER=root
LOCAL_MYSQL_PASSWORD=your_local_password
LOCAL_MYSQL_DATABASE=tinderClone_local

## Staging Environment (.env.staging)
NODE_ENV=staging
PORT=3000
FRONTEND_URL=https://staging.tinderclone.com
JWT_SECRET=your_staging_jwt_secret
MONGODB_URI=mongodb+srv://user:pass@cluster.mongodb.net/tinderClone_staging
STAGING_MYSQL_HOST=staging-db.region.rds.amazonaws.com
STAGING_MYSQL_USER=staging_user
STAGING_MYSQL_PASSWORD=staging_password
STAGING_MYSQL_DATABASE=tinderClone_staging

## Production Environment (.env.production)
NODE_ENV=production
PORT=8080
FRONTEND_URL=https://tinderclone.com
JWT_SECRET=your_production_jwt_secret
MONGODB_URI=mongodb+srv://user:pass@cluster.mongodb.net/tinderClone_prod
PRODUCTION_MYSQL_HOST=prod-db.region.rds.amazonaws.com
PRODUCTION_MYSQL_USER=prod_user
PRODUCTION_MYSQL_PASSWORD=prod_password
PRODUCTION_MYSQL_DATABASE=tinderClone_production
